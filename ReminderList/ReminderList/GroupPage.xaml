<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReminderList.GroupPage"
             Title="Нужно купить">

    <StackLayout>
        <Label Text="Группа:"></Label>
        <Entry Text="{Binding GroupName}"></Entry>
        <Label Text="Покупки:"></Label>
        <Editor Text="{Binding Merch}" HeightRequest="100"></Editor>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Сохранить" Clicked="SaveGroup" />
            <Button Text="Удалить" Clicked="DeleteGroup" />
            <Button Text="Отмена"  Clicked="Cancel"/>
        </StackLayout>
    </StackLayout>

</ContentPage>